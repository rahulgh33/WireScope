# .env.example
# Copy this file to .env and customize the values

# Authentication Configuration
# Format: username:password:role,username2:password2:role2
AUTH_USERS=admin:ChangeMe123:admin,viewer:ViewPass456:viewer,operator:OpPass789:operator

# Or use individual password environment variables
ADMIN_PASSWORD=YourSecureAdminPassword123
VIEWER_PASSWORD=YourViewerPassword456
OPERATOR_PASSWORD=YourOperatorPassword789

# TLS/HTTPS Configuration
TLS_ENABLED=true
TLS_CERT_FILE=/path/to/cert.pem
TLS_KEY_FILE=/path/to/key.pem
TLS_MIN_VERSION=1.2

# Redis Configuration (for distributed rate limiting)
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=100
RATE_LIMIT_WINDOW=60

# Database Configuration
DATABASE_URL=postgres://telemetry:password@localhost:5432/telemetry?sslmode=disable
DB_MAX_CONNECTIONS=50
DB_MAX_IDLE_CONNECTIONS=10

# NATS Configuration
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=telemetry-cluster

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# API Tokens (comma-separated)
API_TOKENS=demo-token,prod-token-abc123

# Retention Policies
EVENTS_RETENTION_DAYS=7
AGGREGATES_RETENTION_DAYS=90

# Alerting Thresholds
LATENCY_THRESHOLD_MS=500
THROUGHPUT_THRESHOLD_MB=10
ERROR_RATE_THRESHOLD=0.05
